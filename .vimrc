filetype off
call pathogen#infect()
call pathogen#helptags()

set textwidth=79
set shiftwidth=4
set tabstop=4
set expandtab
set softtabstop=4
set shiftround
set autoindent

" Code folding
set foldlevel=99

" Key remaps

nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
nnoremap <leader>v <Plug>TaskList
